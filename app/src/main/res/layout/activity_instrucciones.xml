<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/woodtexture"


    tools:context="view.InstruccionesActivity">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#333333">

    <!-- Toolbar personalizada -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarInstrucciones"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#444444"
        android:title="Reglas del Juego"
        android:titleTextColor="#FFFFFF"/>

    <!-- Contenido de la ventana de instrucciones -->
    <TextView
        android:id="@+id/tituloComoSeJuega"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="¿Cómo se juega?"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_below="@id/toolbarInstrucciones"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/descripcionComoSeJuega"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Los jugadores forman un círculo y en el centro colocan el dispositivo móvil, luego tocan el botón parpadeante para girar la botella. El jugador que señale la botella debe cumplir el reto que lanza la app, de lo contrario abandona el juego."
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:layout_below="@id/tituloComoSeJuega"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/tituloQuienGana"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="¿Quién gana?"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_below="@id/descripcionComoSeJuega"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/descripcionQuienGana"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gana el último jugador que no abandone el juego."
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:layout_below="@id/tituloQuienGana"
        android:layout_marginTop="8dp"/>

    <!-- Agregar el botón de flecha atrás en la barra de herramientas -->
    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="358dp"
        android:layout_marginTop="16dp"
        android:contentDescription="Botón de Flecha Atrás"
        android:background="@drawable/button_touch_feedback"
        android:src="@drawable/back" />


</RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>