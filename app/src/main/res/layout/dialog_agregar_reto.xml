<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="view.RetosActivity">

    <RelativeLayout
        android:layout_width="410dp"
        android:layout_height="729dp"
        android:padding="16dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-2dp"
        tools:layout_editor_absoluteY="1dp">
S
        <TextView
            android:id="@+id/tituloDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:text="Agregar reto"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextReto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tituloDialog"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:hint="Escriba el reto"
            android:inputType="text"
            android:textColorHint="#FFFF9800" />



        <Button
            android:id="@+id/botonCancelar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTextReto"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="144dp"
            android:layout_marginEnd="146dp"
            android:layout_marginBottom="16dp"
            android:text="Cancelar"
            android:textColor="#FFFF9800" />

        <Button
            android:id="@+id/botonGuardar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTextReto"
            android:layout_alignParentStart="true"
            android:layout_marginStart="129dp"
            android:layout_marginTop="85dp"
            android:layout_marginBottom="16dp"
            android:enabled="false"
            android:text="Guardar"
            android:textColor="#FFFF9800" />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>